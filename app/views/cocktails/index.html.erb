<div class="banner">
  <div class="navbar-content">
    <h1>Pretty Cocktails</h1>
    <%= link_to "Create cocktail", new_cocktail_path, class: 'new-button' %>
  </div>
</div>

<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <p> <%= cocktail.name %> </p>
      <%= link_to 'see details',  cocktail_path(cocktail.id) %>
    </div>
    <% end %>

  </div>
</div>
